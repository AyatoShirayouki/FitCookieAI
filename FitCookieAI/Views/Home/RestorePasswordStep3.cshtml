@model FitCookieAI.Models.EditPasswordRestorePasswordVM
@{
    ViewData["Title"] = "Recover Password (step 3)";
    Layout = "_RestorePasswordLayout";
}

<!-- Contact Start -->
<div class="container-xxl py-5" id="contact">
    <div class="container py-5 px-lg-5">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="text-primary-gradient fw-medium">Step 3</h5>
            <h1 class="mb-5">Enter the verification code that we've send via email</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="wow fadeInUp" data-wow-delay="0.3s">
                    <form id="check-email-restore-password-form" action="/Home/RestorePasswordStep3" method="post">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="new-password" name="Password"
                                           placeholder="Your Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" minlength="6" maxlength="20" required>
                                    <label for="new-password">Your new password</label>
                                    <small class="required">required</small>
                                    @Html.ValidationMessageFor(m => m.Password, null, new {@class = "error" })
                                </div>
                                <small class="required">Must contain at least one number and one uppercase and lowercase letter, and between 6 and 20 characters</small>
                                <div class="form-floating">
                                    <input type="password" class="form-control" id="new-password-confirm" name="ConfirmPassword"
                                           placeholder="Your Confirm Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{6,}" minlength="6" maxlength="20" required>
                                    <label for="new-password">Confirm password</label>
                                    <small class="required">required</small>
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new {@class = "error" })
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    @Html.ValidationMessage("Password-error", null, new { @class = "error" })
                                </div>
                            </div>
                            <div class="col-12 text-center">
                                <button class="btn btn-primary-gradient rounded-pill py-3 px-5 btn-pr-submit" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
