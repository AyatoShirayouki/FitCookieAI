@model FitCookieAI.Models.CheckCodeRestorePasswordVM
@{
    ViewData["Title"] = "Recover Password (step 2)";
    Layout = "_RestorePasswordLayout";
}

<!-- Contact Start -->
<div class="container-xxl py-5" id="contact">
    <div class="container py-5 px-lg-5">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="text-primary-gradient fw-medium">Step 2</h5>
            <h1 class="mb-5">Enter the verification code that we've send via email</h1>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-9">
                <div class="wow fadeInUp" data-wow-delay="0.3s">
                    <form id="check-email-restore-password-form" action="/Home/RestorePasswordStep2" method="post">
                        <div class="row g-3">
                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input type="text" class="form-control" id="email-verification-code" name="Code" placeholder="Your Verification Code">
                                    <label for="email-verification-code">Your verification code</label>
                                    @Html.ValidationMessageFor(m => m.Code, null, new {@class = "error" })
                                </div>
                                <small class="required">The code you've received via email is active for 10 minutes</small>
                            </div>
                            <div class="col-md-12">
                                <div class="form-floating">
                                    @Html.ValidationMessage("Code-error", null, new { @class = "error" })
                                </div>
                            </div>
                            <div class="col-12 text-center">
                                <button class="btn btn-primary-gradient rounded-pill py-3 px-5" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
