@model AdminPanel.Models.Users.UsersEditVM
@{
    ViewData["Title"] = "User Edit";
    Layout = "_Layout";
}

@if (!string.IsNullOrEmpty(Model.Error))
{
        <!--Error message-->
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fa fa-exclamation-circle me-2"></i>@Model.Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
}

@if (!string.IsNullOrEmpty(Model.Message))
{
        <!--Success message-->
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fa fa-exclamation-circle me-2"></i>@Model.Message
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
}

<!-- Basic Information Form -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-6">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Basic Information</h6>
                <form method="post" action="/Users/Edit">
                    <input type="hidden" id="Id" name="Id" value="@Model.Id">
                    <div class="mb-3">
                        <label for="UserEmail-edit" class="form-label">Email address</label>
                        <input type="email" class="form-control" name="Email" id="UserEmail-edit" aria-describedby="user_email" value="@Model.Email">
                        @Html.ValidationMessageFor(m => m.Email, null, new {@class = "error" })
                        @Html.ValidationMessage("Email-format", null, new { @class = "error" })
                    </div>
                    <div class="mb-3">
                        <label for="UserPassword-edit" class="form-label">Password</label>
                        <input type="password" name="Password" class="form-control" id="UserPassword-edit" value="@Model.Password">
                        @Html.ValidationMessageFor(m => m.Password, null, new {@class = "error" })
                    </div>
                    <div class="mb-3">
                        <label for="UserFirstName-edit" class="form-label">First Name</label>
                        <input type="text" class="form-control" name="FirstName" id="UserFirstName-edit" aria-describedby="user_first_name" value="@Model.FirstName">
                        @Html.ValidationMessageFor(m => m.FirstName, null, new {@class = "error" })
                    </div>
                    <div class="mb-3">
                        <label for="UserLastName-edit" class="form-label">Last Name</label>
                        <input type="text" class="form-control" name="LastName" id="UserLastName-edit" aria-describedby="user_last_name" value="@Model.LastName">
                        @Html.ValidationMessageFor(m => m.LastName, null, new {@class = "error" })
                    </div>
                    <fieldset class="row mb-3">
                        <legend class="col-form-label col-sm-2 pt-0">Gender</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                @if (Model.Gender == "Male")
                                {
                                    <input class="form-check-input" type="radio" name="Gender" id="UserGenderMale-edit" value="Male" checked>
                                }
                                else
                                {
                                    <input class="form-check-input" type="radio" name="Gender" id="UserGenderMale-edit" value="Male">
                                }
                                <label class="form-check-label" for="UserGenederMale-edit">
                                    Male
                                </label>
                            </div>
                            <div class="form-check">
                                @if (Model.Gender == "Female")
                                {
                                    <input class="form-check-input" type="radio" name="Gender" id="UserGenderFemale-edit" value="Female" checked>
                                }
                                else
                                {
                                    <input class="form-check-input" type="radio" name="Gender" id="UserGenderFemale-edit" value="Female">
                                }
                                <label class="form-check-label" for="UserGenderFemale-edit">
                                    Female
                                </label>
                            </div>
                        </div>
                    </fieldset>
                    <div class="mb-3">
                        <label for="UserPhoneNumber-edit" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" name="PhoneNumber" id="UserPhoneNumber-edit" aria-describedby="user_phone_number" value="@Model.PhoneNumber">
                        @Html.ValidationMessageFor(m => m.PhoneNumber, null, new {@class = "error" })
                    </div>
                    <div class="mb-3 form-check">
                        <label for="UserDOB-edit" class="form-label">Date Of Birth</label>
                        <input type="date" class="form-control" name="DOB" id="UserDOB-edit" aria-describedby="user_date_of_birth" value="@Model.DOB.GetValueOrDefault().Date.ToString("yyyy-MM-dd")" asp-format="{0:yyyy-MM-dd}">
                        @Html.ValidationMessageFor(m => m.DOB, null, new {@class = "error" })
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" class="form-check-input" id="UserSaveChangesCheck-edit">
                        <label class="form-check-label" for="UserSaveChangesCheck-edit">Save these changes!</label>
                    </div>
                    <button type="submit" id="UserProfileSaveChanges-edit" class="btn btn-primary">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Basic Information Form -->