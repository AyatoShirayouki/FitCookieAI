<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="FitCookieAI AI Admin Panel Administration Panel" name="keywords">
    <meta content="FitCookieAI Administrations Panel" name="description">
    <title>@ViewData["Title"] - FitCookieAI - AdminPanel</title>
    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/DASHMIN/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/DASHMIN/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/DASHMIN/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/DASHMIN/css/style.css" rel="stylesheet">

    <!-- DataTables -->
    <link href="~/DASHMIN/css/dataTables.min.css" rel="stylesheet"/>

</head>
<body>
    <div class="container-xxl position-relative bg-white d-flex p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a href="/Home/Index" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>DASHMIN</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        @if (string.IsNullOrEmpty(this.Context.Session.GetString("PhotoName")))
                        {
                            <img class="rounded-circle" src="~/DASHMIN/img/profile-avatar.png" alt="" style="width: 40px; height: 40px;">
                        }
                        else
                        {
                            <img class="rounded-circle" src="~/DASHMIN/Admins/ProfilePhotos/@this.Context.Session.GetString("PhotoName")" alt="admin photo" style="width: 40px; height: 40px;">
                        }
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0">@this.Context.Session.GetString("FirstName") @this.Context.Session.GetString("LastName")</h6>
                        <span>Admin</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <a href="/Home/Index" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-table me-2"></i>Tables</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href="/Users/Index" class="dropdown-item">Users</a>
                            <a href="/Admins/Index" class="dropdown-item">Admins</a>
                            <a href="/Payments/Index" class="dropdown-item">Payments</a>
                            <a href="/PaymentPlans/Index" class="dropdown-item">Payment Plans</a>
                            <a href="/AdminStatuses/Index" class="dropdown-item">Admin Statuses</a>
                        </div>
                    </div>
                    <a href="chart.html" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Charts</a>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->
        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand bg-light navbar-light sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-hashtag"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            @if (string.IsNullOrEmpty(this.Context.Session.GetString("PhotoName")))
                            {
                                <img class="rounded-circle" src="~/DASHMIN/img/profile-avatar.png" alt="" style="width: 40px; height: 40px;">
                            }
                            else
                            {
                                <img class="rounded-circle" src="~/DASHMIN/Admins/ProfilePhotos/@this.Context.Session.GetString("PhotoName")" alt="admin photo" style="width: 40px; height: 40px;">
                            }
                            <span class="d-none d-lg-inline-flex">@this.Context.Session.GetString("FirstName") @this.Context.Session.GetString("LastName")</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-light border-0 rounded-0 rounded-bottom m-0">
                            <a href="/Admins/Profile" class="dropdown-item">My Profile</a>
                            <a href="/Authentication/Logout" class="dropdown-item">Log Out</a>
                        </div>
                    </div>
                </div>
            </nav>
            <!-- Navbar End -->

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

            <!-- Footer Start -->
            <div class="container-fluid pt-4 px-4">
                <div class="bg-light rounded-top p-4">
                    <div class="row">
                        <div class="col-12 col-sm-6 text-center text-sm-start">
                            &copy; <a href="#">Your Site Name</a>, All Right Reserved.
                        </div>
                        <div class="col-12 col-sm-6 text-center text-sm-end">
                            <!--/*** This template is free as long as you keep the footer author’s credit link/attribution link/backlink. If you'd like to use the template without the footer author’s credit link/attribution link/backlink, you can purchase the Credit Removal License from "https://htmlcodex.com/credit-removal". Thank you for your support. ***/-->
                            Designed By <a href="https://htmlcodex.com">HTML Codex</a>
                            </br>
                            Distributed By <a class="border-bottom" href="https://themewagon.com" target="_blank">ThemeWagon</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer End -->
        </div>
        <!-- Content End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>
    
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/DASHMIN/lib/chart/chart.min.js"></script>
    <script src="~/DASHMIN/lib/easing/easing.min.js"></script>
    <script src="~/DASHMIN/lib/waypoints/waypoints.min.js"></script>
    <script src="~/DASHMIN/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/DASHMIN/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/DASHMIN/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/DASHMIN/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/DASHMIN/js/main.js"></script>

    <!-- Validations -->
    <script src="~/DASHMIN/js/ProfileFormValidations.js"></script>
    <script src="~/DASHMIN/js/UserEditFormValidations.js"></script>
    <script src="~/DASHMIN/js/AdminEditFormValidations.js"></script>

    <!-- DataTables -->
    <script src="~/DASHMIN/js/dataTables.min.js" ></script>

    <script>
        $(document).ready(function () {
            $('#adminTable').DataTable();
            $('#adminStatusesTable').DataTable();
            $('#paymentsTable').DataTable();
            $('#usersTable').DataTable();
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
