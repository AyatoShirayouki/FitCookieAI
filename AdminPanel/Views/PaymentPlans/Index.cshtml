@model AdminPanel.Models.PaymentPlans.PaymentPlansIndexVM
@{
    ViewData["Title"] = "Payment Plans";
    Layout = "_Layout";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        @if (Model.PaymentPlans.Count == 0)
        {
            <center>
                <h1 class="display-3">No Payment plans have been created yet!</h1>
            </center>
        }
        else
        {
            foreach (var plan in Model.PaymentPlans)
            {
                <div class="col-sm-12 col-md-6 col-xl-4">
                    <div class="h-100 bg-light rounded p-4">
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <center>
                                <h6 class="mb-0">@plan.Title</h6>
                            </center>
                        </div>
                        <div class="d-flex mb-2">
                            <h4>Price per month: @plan.PricePerMonth</h4>
                            <p><b>Description:</b> @plan.Description</p>
                        </div>
                        @foreach (var feature in Model.PaymentPlanFeatures)
                        {
                            if (plan.Id == feature.PaymentPlanId)
                            {
                                <div class="d-flex align-items-center border-bottom py-2">
                                    <div class="w-100 ms-3">
                                        <div class="d-flex w-100 align-items-center justify-content-between">
                                            <span>@feature.Title</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>
